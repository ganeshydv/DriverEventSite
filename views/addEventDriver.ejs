<%- include('partials/header') %>

<div class="jumbotron centered">
    <div class="container">
      <h1 class="display-3">Add Event Driver </h1>
      <hr>
      <form action="/addeventdriver" method="post">
        <table>
            <tr>
                <td>
                    <label for="text">Event Name</label>
                </td>
                <td>
                     <select name="eventName" >
                        <% eventsArray.forEach(function(obj){    %>
                         <option value="<%=obj%>" name="eventName" selected><%=obj%></option>
                        <%  }); %> 
                     </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="text">Driver Name</label>
                </td>
                <td>
                     <input type="text" name="driverName"> 
                </td>
            </tr>
        </table>
        <button type="submit">Add</button>
    </form>
    </div>
  </div>

