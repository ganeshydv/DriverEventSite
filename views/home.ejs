<%- include('partials/header') %>

<div class="jumbotron centered eventDriverTable">
  <div class="container" id="dvTableparentdiv">
    <table style="width: 60%">
      <tr>
        <th>Sr. No</th>
        <th>Event Driver ID</th>
        <th>Event Name</th>
        <th>Driver Name</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>

      <% var i=1; %> <% eventDriverObj.forEach(function(obj){ %>
      <tr></tr>
      <td><%=i%></td>
      <td><%=obj.EventDriverId%></td>
      <td><%=obj.EventCollection.EventName%></td>
      <td><%=obj.DriverCollection.DriverName%></td>
      <td>
        <a style="color: aliceblue" href="/editevent?id=<%=obj.EventDriverId%>"
          ><button class="btn btn-success">edit</button>
        </a>
      </td>
      <td>
        <!-- below line is commeneted because of onclick event is handling xhr request -->
        <!-- <a style="color: black;" href="/deleteevent?id=<%=obj.EventDriverId%>" > -->
        <button
          class="btn"
          id="deleteEvent1"
          onclick="deleteEvent('<%=obj.EventCollection.EventName%>','<%=obj.EventDriverId%>')"
        >
          <!-- <img
            src="https://img.icons8.com/cute-clipart/64/null/filled-trash.png"
            alt="Delete" height="45" width="45"
          /> -->
          <img
            src="https://img.icons8.com/color-glass/48/null/filled-trash.png" height="45" width="45"
            alt="Delete"
          />
        </button>
        <!-- </a> -->
      </td>
      <%i++ %> <% }); %>
    </table>
  </div>
</div>

<script src="Public/js/script.js" type="text/javascript"></script>

<%- include('partials/footer') %>
